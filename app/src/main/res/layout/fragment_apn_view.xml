<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/net_fragment_background"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/ll_container_to_hide_apn_view_fragment"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Waiting for devices"
                style="@style/StyleWifiTitleNonSelected"/>
            <TextView
                android:id="@+id/tv_apn_ssid_title_apn_view_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/StyleWifiSubTitleNonSelected"/>
            </LinearLayout>

        <ListView
            android:id="@+id/lv_apn_items_apn_view_fragment"
            android:layout_width="fill_parent"
            android:divider="@drawable/listview_divider"
            android:dividerHeight="1px"
            android:layout_height="fill_parent" />

    </RelativeLayout>
</LinearLayout>
